<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dk.osl.intelligentbil.MainActivity"
    android:orientation="vertical">
    <!--
  https://material.io/color/#!/?view.left=0&view.right=0&primary.color=607D8B&primary.text.color=000000
    -->
    <TextView
        android:textAlignment="center"
        android:id="@+id/headline"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velkommen user"
        android:textColor="@android:color/black"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:text="test"
        android:id="@+id/testbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <Button
        android:text="testsend"
        android:id="@+id/testbtsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <Button
        android:text="stop"
        android:id="@+id/testbtstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/connected"
        android:text="connected?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
        <TextView
            android:id="@+id/btrece"
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />


    <FrameLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
